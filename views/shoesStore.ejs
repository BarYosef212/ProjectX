<!DOCTYPE html>
<html>
  <head>
    <title>Shoe Store</title>
    <link rel="stylesheet" href="Styles/main.css" />
    <!-- Assuming you have some styles -->
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <div class="shoes-container">
        <% shoes.forEach(shoe => { %>
        <div class="shoe">
          <img src="<%= shoe.primaryImage %>" alt="<%= shoe.name %>" />
          <h3><%= shoe.name %></h3>
          <p><%= shoe.title %></p>
          <p><b>Price: </b>$<%= shoe.price %></p>
          <button class="btn">Add to Cart</button>
        </div>
        <% }); %>
      </div>
    </main>

    <div id="pagination">
      <% if (currentPage > 1) { %>
          <a href="/store?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>
  
      <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="/store?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
      <% } %>
  
      <% if (currentPage < totalPages) { %>
          <a href="/store?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
  </div>

    <%- include ('partials/footer') %>

    <script src="/public/Scripts/script.js"></script>
  </body>
</html>
